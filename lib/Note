import 'package:flutter/material.dart';
import 'package:flutter/rendering.dart';


class FilterCategoties {
  final String name;
  final String imageUrl;

  FilterCategoties({required this.name, required this.imageUrl});
}

List<FilterCategoties> filtercategories = [
  FilterCategoties(name: 'Junk Food', imageUrl: 'https://asset.kompas.com/crops/_Lt4XBy-jwzJ2wtdA7qo2EtY1uc=/0x0:1000x667/1200x800/data/photo/2021/10/21/617111bf79ded.jpg'),
  FilterCategoties(name: 'Healty Food', imageUrl: 'assets/healthy.jpg'),
  FilterCategoties(name: 'Whole Food', imageUrl: 'assets/whole.jpg'),
];

class Home extends StatefulWidget {
  Home({super.key});

  @override
  State<Home> createState() => _HomeState();
}

class _HomeState extends State<Home> {
  @override
  final TextEditingController searchController = TextEditingController();

List<FilterCategoties> filteredCategories = [];

@override
void initState() {
  super.initState();
  filteredCategories = filtercategories; // Default tampilkan semua
}

void filterCategories(String query) {
  setState(() {
    filteredCategories = filtercategories
        .where((category) =>
            category.name.toLowerCase().contains(query.toLowerCase()))
        .toList();
  });
}


@override
void dispose() {
  searchController.dispose();
  super.dispose();
}


